{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve API",
      "type": "shell",
      "command": "nx serve api",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Serve Discord Bot",
      "type": "shell",
      "command": "nx serve discord-bot",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Serve Admin Dashboard",
      "type": "shell",
      "command": "nx serve admin-dashboard",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Serve Tutor Dashboard",
      "type": "shell",
      "command": "nx serve tutor-dashboard",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Open Prisma Studio",
      "type": "shell",
      "command": "prisma studio --schema=./../../prisma/schema.prisma",
      "options": {
        "cwd": "./apps/api"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Prisma Migrate Dev",
      "type": "shell",
      "command": "prisma migrate dev --schema=./../../prisma/schema.prisma",
      "options": {
        "cwd": "./apps/api"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "type": "shell",
      "command": "ngrok http http://localhost:3000",
      "label": "Start ngrok on port 3000",
      "problemMatcher": []
    }
  ]
}
