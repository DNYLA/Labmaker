{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Prisma Studio",
      "type": "shell",
      "command": "prisma studio --schema=./../../prisma/schema.prisma",
      "options": {
        "cwd": "./apps/api"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Prisma Migrate Dev",
      "type": "shell",
      "command": "prisma migrate dev --schema=./../../prisma/schema.prisma",
      "options": {
        "cwd": "./apps/api"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "type": "shell",
      "command": "ngrok http http://localhost:3000",
      "label": "Start ngrok on port 3000"
    }
  ]
}
